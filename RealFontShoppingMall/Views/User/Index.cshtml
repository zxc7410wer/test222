<script type="text/javascript">
    var loginId = '';
    var password = '';

    // 로그인하기
    var login = function () {
        loginId = $('#inputLoginId').val();
        password = $('#inputPassword').val();

        var data = {
            login_id: loginId,
            password: password
        };
        //console.log(data);

        if (!isValid(loginId)) {
            alert('아이디를 입력해주세요.');
            return;
        }

        if (!isValid(password)) {
            alert('비밀번호를 입력해주세요.');
            return;
        }

        loadingStart();

        $.ajax({
            url: '/user/login',
            method: 'POST',
            data: data,
            success: function (result) {
                if (result.state == 'ok') {
                    setUserInfo(result.data);
                    if ($('input[name="keepLogin"]').is(':checked')) {
                        setLoginStatus(true);
                    } else {
                        setLoginStatus(false);
                    }
                    location.href = '/home/index';
                }
                if (result.state == 'no user') {
                    loadingStop();
                    alert('해당 계정이 없습니다.');
                }
                if (result.state == 'wrong password') {
                    loadingStop();
                    alert('비밀번호가 틀렸습니다.');
                }
                return;
            },
            error: function (xhr, textStatus, error) {
                loadingStop();
                alert('잘못된 요청입니다.');
                //console.log(xhr.statusText);
                //console.log(textStatus);
                //console.log(error);
            }
        })
    }

    // Init
    $(document).ready(function () {
        
    });
</script>

<div class="col-md-9 content">
    <div class="page">
        <article>
